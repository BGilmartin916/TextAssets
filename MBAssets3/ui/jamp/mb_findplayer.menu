//	FIND PLAYER POPUP MENU
//	Screen for finding which server has a particular player
{
	menuDef
	{
		name "findplayer_popmenu"
		visible					0
		fullscreen				0
		outOfBoundsClick
		rect					125 60 390 360
		focusColor				1 1 1 1
		style					1
		border					1
		descX					320
		descY					400
		descScale				1
		descColor				0.1 0.7 1 0.8
		descAlignment			ITEM_ALIGN_CENTER
		popup
		onOpen
		{
			uiScript			FindPlayer
			setfocus			nameField 
		}
		onESC
		{
			play				"sound/interface/back.mp3"
			close				findplayer_popmenu
		}

// MENU BACKGROUND

		itemDef
		{
			name				blackbackground
			group				none
			style				WINDOW_STYLE_FILLED
			rect				0 0 390 380
			backcolor			0 0 0 0.95
			forecolor			1 1 1 1
			border				0
			visible				1
			decoration
		}

		itemDef
		{
			name				setup_background
			group				none
			style				WINDOW_STYLE_FILLED
			rect				0 0 390 380
			backcolor			0.1 0.7 1 0.1
			forecolor			1 1 1 1
			border				1
			bordercolor			0.1 0.7 1 0.8
			visible				1
			decoration
		}

		// title
		itemDef
		{
			name				screenTitle
			text				@MENUS_FIND_PLAYER
			style				WINDOW_STYLE_EMPTY
			rect				25 5 340 20
			font				3
			textscale			0.7
