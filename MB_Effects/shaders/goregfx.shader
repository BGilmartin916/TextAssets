//OIL GORE SHADER//

gfx/gore/bullethole_oil
{
	qer_editorimage	gfx/gore/bullethole_oil
	polygonOffset
	{
		clampmap gfx/gore/bullethole_oil
		blendFunc GL_SRC_ALPHA GL_ONE_MINUS_SRC_ALPHA
		alphaGen const 0.7
		rgbGen lightingDiffuse
	}
}

gfx/gore/drops_pool_oil
{
	qer_editorimage	gfx/gore/drops_pool_oil
	cull	twosided
	{
		map gfx/gore/drops_pool_oil
		blendFunc GL_DST_COLOR GL_ONE_MINUS_SRC_ALPHA
